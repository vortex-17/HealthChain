<!DOCTYPE html>
<html>
    <head>
        <title>History</title>
        <link rel='stylesheet' href='../public/history.css' />
        <style>

            body {
                background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('../public/healthcare-background.jpeg');
                background-size: cover;
                background-repeat: no-repeat;
                background-attachment: fixed;
                color : white;
                text-align:center
                }
                table {
                    margin-left:10%;
                    margin-right:10%;
                    border-collapse: collapse;
                    width: 80%;
                }
                a:link, a:visited {
                    background-color: #f44336;
                    border: 2px solid white;
                    border-radius: 25px;
                    color: white;
                    padding: 14px 25px;
                    text-align: center;
                    text-decoration: none;
                    display: inline-block;
                }
                    
                a:hover, a:active {
                    background-color: red;
                }
        
                th, td {
                    padding: 8px;
                    text-align: left;
                    border-bottom: 1px solid #ddd;
                }
                th {
                    font-size: large;
                    background-color: antiquewhite;
                    color: black
                }

                /* tr:hover {background-color:white;
                    color:black;
                } */

                .row-hover {
                    background-color:white;
                    color:black;
                    /* opacity: 0.8; */
                }

                input[type=button], input[type=submit] {
                background-color: #f44336;
                border: 2px solid white;
                border-radius: 25px;
                color: white;
                padding: 14px 25px;
                text-align: center;
                cursor: pointer;
                text-decoration: none;
                }
                input[type=text] {
                border-radius: 25px;
                margin:6px;
                color: white;
                text-align: center;
                padding: 14px 25px;
                }
        
            </style>
    </head>
    <body>
        <a style = "display:block;float:left" href = "http://localhost:4000/patients/home">Home</a><br>
        <h3 style = "display:block;float:center;text-align: center;">Showing Your history</h3>
        
        <!-- <p class="two"><%= message %>!</p><br> -->
        <p style = "display:block;float:center;text-align: center;">Transaction ID: <%= ID %></p>
        <table>
            <tr>
                <!-- <th>Treatment</th> -->
                <th>Key</th>
                <th>Value</th>
            </tr>
            <% Object.keys(result).forEach(function(key){ %>
                <tr class = "row-hover">
                    <td><%- key %></td>
                    <td><%- result[key] %></td>
                </tr>
            <% }); %>

            <form action = "http://localhost:4000/patients/share=<%=ID%>" method = "POST">
                <input type = "text" name = "email" id = "email" placeholder = "Enter Email ID">
                <input type = "submit" name = "submit" value = "Share" ><br>
            </form>
            <br><br>
        </table>
    </body>
</html>
